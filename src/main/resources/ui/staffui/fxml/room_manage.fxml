            <TableColumn fx:id="room_number" prefWidth="100.0" text="房间号" />
            <TableColumn fx:id="room_type" prefWidth="100.0" text="房间类型" />
            <TableColumn fx:id="room_price" prefWidth="100.0" text="价格" />
            <TableColumn fx:id="room_state" prefWidth="100.0" text="状态" />
         </columns>
      </TableView>
      <Button fx:id="refresh" layoutX="305.0" layoutY="136.0" mnemonicParsing="false" onAction="#refresh" prefHeight="23.0" prefWidth="55.0" underline="true">
