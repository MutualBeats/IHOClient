      <Button fx:id="peopleInfo" layoutX="35.0" layoutY="130.0" mnemonicParsing="false" onAction="#peopleInfo" prefHeight="30.0" prefWidth="100.0" />
      <Button fx:id="promotion" layoutX="35.0" layoutY="330.0" mnemonicParsing="false" onAction="#hotelPromotion" prefHeight="30.0" prefWidth="100.0" />
      <Button fx:id="room" layoutX="35.0" layoutY="280.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" />
      <Button fx:id="order" layoutX="35.0" layoutY="230.0" mnemonicParsing="false" onAction="#manageOrder" prefHeight="30.0" prefWidth="100.0" />
