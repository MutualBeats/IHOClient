      <Label fx:id="room_title" layoutX="5.0" layoutY="35.0" prefHeight="45.0" prefWidth="200.0">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Button fx:id="cancel" layoutX="600.0" layoutY="500.0" mnemonicParsing="false" onAction="#cancel" prefHeight="26.0" prefWidth="60.0">
